{
    "ontology": {
        "name": "IP exposed",
        "concepts": [
            {
                "description": "Nível 1: Expressão Regular Básica para IPv4",
                "format": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b"
            },
            {
                "description": "Nível 2: Expressão Regular para IPv4 e IPv6",
                "format": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b|\\b(?:[0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}\\b"
            },
            {
                "description": "Nível 3: Expressão Regular para Capturar Contexto",
                "format": "(?:\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b|\\b(?:[0-9a-fA-F]{1,4}:){7}[0-9a-fA-F]{1,4}\\b)(?=[^\\d.:]|$)"
            }
        ],
        "links": [
            "https://www.regular-expressions.info/regexbuddy/ipaccurate.html"
        ]
    }
}